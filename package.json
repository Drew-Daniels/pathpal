{
  "name": "pathpal",
  "version": "1.0.0",
  "description": "Zero-dependency filesystem path abstraction for Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "node --import tsx --test tests/**/*.test.ts",
    "test:coverage": "npm run build:test && c8 --include='dist-test/src/**/*.js' --exclude='dist-test/tests/**' --reporter=text --reporter=html --all node --test 'dist-test/tests/**/*.test.js'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "keywords": [
    "path",
    "filesystem",
    "fs",
    "paths",
    "directory",
    "project-structure",
    "path-helper",
    "path-resolver",
    "pathpal",
    "convention-based",
    "zero-dependency",
    "utility"
  ],
  "author": "Drew Daniels <drew.daniels@hey.com> (https://github.com/Drew-Daniels)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Drew-Daniels/pathpal.git",
    "directory": "packages/pathpal"
  },
  "bugs": {
    "url": "https://github.com/Drew-Daniels/pathpal/issues"
  },
  "homepage": "https://github.com/Drew-Daniels/pathpal#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "c8": "^10.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "c8": {
    "include": [
      "dist-test/src/**/*.js"
    ],
    "exclude": [
      "dist-test/tests/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "sourceMap": true
  }
}
